<h2 class="text-center m-4">Top Venues</h2>
<div class="container">
  <div class="row">
    <% @venues.each do |venue| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%= link_to venue_path(venue) do %>
          <div class="card d-flex">
            <img class="card-image" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" style="height:100%;width:100%;">
            <div class="card-infos">
              <div>
                <h2><%= venue.name %></h2>
                <p><%= venue.category %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

