<div class="container mt-4">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="card align-items-stretch">
        <div class="image-user">
          <img src="<%= current_user.photo %>" alt="profile image" style="width:100%;height:150px; object-fit: cover;">
          <div class="text-left mt-4 mx-4">
             <h2><%= @user.first_name %></h2>
             <h2><%= @user.last_name %></h2>
          </div>
        </div>
        <hr>
          <div class="column mx-4 my-2">
            <strong><%= @user.email %></strong>
            <p class="profile-card-description"><%= @user.description %></p>
            <i class="far fa-edit px-2"></i>
            <%= link_to 'Edit Profile', edit_user_path %>
          </div>
      </div>
    </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card p-4">
          <h4 class="text-center">Upcoming Venues</h4>
          <hr>
          <% if @upcoming_venues %>
            <% @upcoming_venues.each do |booking| %>
            <div class="card-description-renting p-2">
              <h2><%= booking.venue.name %></h2>
            </div>
              <a class="card-link" href="#" ></a>
              <%= link_to("See Venue Details", venue_path(booking.venue), class: "card-link") %>
          <% end %>
          <% else %>
              <p class="col-md-12">You don't have any upcoming venues yet. You should rent one! </p>
            <% end %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card p-4">
          <h4 class="text-center">Past Venues</h4>
          <hr>
          <% if @past_venues %>
            <% @past_venues.each do |booking| %>
            <div class="card-description-renting p-2">
              <h2><%= booking.venue.name %></h2>
            </div>
              <a class="card-link" href="#" ></a>
              <%= link_to("See Details", booking_path(booking.venue), class: "card-link") %>
            <% end %>
            <% else %>
              <p class="col-md-12">You don't have any upcoming venues yet. You should rent one! </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>







