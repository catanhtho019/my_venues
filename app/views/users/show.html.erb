
<h1><%= @user.first_name %></h1>
<h1><%= @user.last_name %></h1>
<h1><%= @user.email %></h1>
<h1><%= @user.description %></h1>


<h4>Rented venues</h4>
      <div class="row">
        <% if @user.bookings.any? %>
          <% @user.bookings.each do |booking| %>
            <div class="col-md-4">

                <div class="card-description-renting">
                  <h2><%= booking.venue.name %></h2>
                </div>
                <a class="card-link" href="#" ></a>
                <%= link_to("See Venue Details", venue_path(booking.venue), class: "card-link") %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="col-md-12">You don't have any rented venues yet. You should rent one! </p>
        <% end %>
      </div>
<%= link_to 'Edit Profile', edit_user_path %>
